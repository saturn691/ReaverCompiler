# For more info see here: https://editorconfig.org

# Top-level config
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,h,py}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
